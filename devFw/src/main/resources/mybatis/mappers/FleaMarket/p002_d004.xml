<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="FleaMarket.p002_d004">
	<resultMap id="p002_d004_Result01" type="F_P002_D004VO"> 
		<result property="seller_memberid" column="seller_memberid" />
		<result property="review_group" column="review_group" />
		<result property="review_number" column="review_number" />
		<result property="prod_number" column="prod_number" />
		<result property="buyer_memberid" column="buyer_memberid" />
		<result property="review_score" column="review_score" />
		<result property="review_title" column="review_title" />
		<result property="review_photo" column="review_photo" />
		<result property="review_content" column="review_content" />
		<result property="review_date" column="review_date" />
		<result property="flea_code" column="flea_code" />
		
	</resultMap>

	<select id="searchList" resultMap="p002_d004_Result01" parameterType="java.util.Map"> 
      <![CDATA[
         select seller_memberid, review_group, review_number, prod_number, buyer_memberid, review_score, review_title, utl_raw.cast_to_varchar2(review_photo), review_content, review_date, flea_code      
         from review
      ]]>
		<where>
			<if test=" p_id != ''  and  p_id != null">
				review_number = #{p_id}
			</if>
		</where>
	</select>

	<select id="searchMod" resultMap="p002_d004_Result01" parameterType="java.util.Map"> 
      <![CDATA[
         select id, pwd, name, email, joinDate
         from   t_member
      ]]>
		<where>
			<if test=" p_id != ''  and  p_id != null">
				id = #{p_id}
			</if>
		</where>
	</select>

	<update id="updateMember" parameterType="java.util.Map">
		update t_member
		set  pwd = #{pwd}
		   , name = #{name}
		   , email = #{email}
		where id = #{id}
	</update>

</mapper>