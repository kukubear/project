	<select id="searchProduct" resultMap="P_P001_D001Result01" parameterType="java.util.Map"> 
      <![CDATA[
         SELECT p.prod_number, p.prod_amount, p.reused_yn, p.auction_yn, p.flea_yn, p.memberId, p.prod_price, p.prod_title, p.sale_percent, p.direct_area, p.auction_bid, p.represent_image, p.auction_price
		 FROM product p, tag t
      ]]>
		<where>
			<if test="searchVal != null">
				p.prod_number = t.prod_number
		        and (p.prod_title like '%' ||  #{searchVal} || '%'
		            or t.tag1 like '%' ||  #{searchVal} || '%'
		            or t.tag2 like '%' ||  #{searchVal} || '%'
		            or t.tag3 like '%' ||  #{searchVal} || '%'
		            or t.tag4 like '%' ||  #{searchVal} || '%'
		            or t.tag5 like '%' ||  #{searchVal} || '%')
		    </if>
		    <if test="reused != null and action == null and flea == null">
		    	and p.reused_yn = 'y'
		    </if>
		    <if test="reused == null and auction != null and flea == null">
		    	and p.auction_yn = 'y'
		    </if>
		    <if test="reused == null and auction == null and flea != null">
		    	and p.flea_yn = 'y'
		    </if>
		    <if test="reused != null and auction != null and flea = null">
		    	and (p.reused_yn = 'y' or p.auction_yn = 'y')
		    </if>
		    <if test="reused != null and auction == null and flea != null">
		    	and (p.reused_yn = 'y' or p.flea_yn = 'y')
		    </if>
		    <if test="reused == null and auction != null and flea != null">
		    	and (p.auction_yn = 'y' or p.flea_yn = 'y')
		    </if>
		    <if test="reused != null and auction != null and flea != null">
		    	and (p.reused_yn = 'y' or p.auction_yn = 'y' or p.flea_yn = 'y')
		    </if>
		    <if test="send_way != null">
		    	<if test="send_way == 'direct delivery'">
		    		and p.send_way IN (#{send_way}, 'direct', 'delivery')
		    	</if>
		    	<if test="send_way != 'direct delivery'">
		    		and p.send_way = #{send_way}
		    	</if>
		    </if>
<!-- 		    <if test="Ccnt != null"> -->
